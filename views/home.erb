<header class="intro-header" style="background-image: url('img/shutterstock_422347750.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1>we are meetups</h1>
                    <hr class="small">
                    <span class="subheading">hello, <%= @user.first_name %> <%= @user.last_name %></span>
                </div>
            </div>
        </div>
    </div>
</header>

</body>
<div class="container white">

  <% if @invites.count > 0 %>
  <h3> your invites </h3>
    <% @invites.each do |invite| %>
        <a href="/invites?id=<%= invite.id%>">
      <div class="col-lg-12 invite-list" style="background-image: url(<%= invite.event.image %>)">
        <h3><%= invite.event.title %></h3>
          <%= invite.event.date.strftime("%d/%m/%Y") %>, <%= invite.event.time.strftime("%H:%M") %>-<%= invite.event.end.strftime("%H:%M") %>
            <br>Your RSVP: <%= invite.response %><br><br>
      </div></a>
      <br>
    <% end%>
  <% else %>
  you don't currently have any invitations<br> register your interest in future events by clicking /here/
  <% end %>
</div>
<div class="container white">

  <% if @past_invites.count > 0 %>
  <h3> past attended events </h3>
    <% @past_invites.each do |invite| %>


        <a href="/past-invites?id=<%= invite.id%>">
      <div class="col-lg-12 invite-list" style="background-image: url(<%= invite.event.image %>)">
        <h3><%= invite.event.title %></h3>
          <%= invite.event.date.strftime("%d/%m/%Y") %>, <%= invite.event.time.strftime("%H:%M") %>-<%= invite.event.end.strftime("%H:%M") %>
      <br><br><br></div></a>
      <br><br><br><br>
    <% end%>
  <% else %>
  you haven't attended any events yet
  <% end %>
</div>
</body>
