
<div class="container white">

  <% if @invites.count > 0 %>
  <h3> your invitations </h3>
    <% @invites.each do |invite| %>
        <a href="/invites?id=<%= invite.id%>">
      <div class="col-lg-12 invite-list" style="background-image: url(<%= invite.event.image %>)">
        <div class="invite-list">
        <span class="title"><%= invite.event.title %></span><br>
          <%= invite.event.date.strftime("%d/%m/%Y") %>, <%= invite.event.time.strftime("%H:%M") %>-<%= invite.event.end.strftime("%H:%M") %>
            <br>Your RSVP: <%= invite.response %>
        </div>
      </div></a>
      <br>
    <% end%>
  <% else %>
  You don't currently have any invitations<br> Register your interest in future events by sending us a message <a href="/contact">here</a>
  <% end %>
</div>

  <% if @past_invites.count > 0 %>
  <div class="container white">
  <h3> attended events </h3>
    <% @past_invites.each do |invite| %>
        <a href="/guest-list?id=<%= invite.event.id %>">
      <div class="col-lg-12 invite-list" style="background-image: url(<%= invite.event.image %>)">
        <span class="title"><%= invite.event.title %></span><br>
          <%= invite.event.date.strftime("%d/%m/%Y") %>, <%= invite.event.time.strftime("%H:%M") %>-<%= invite.event.end.strftime("%H:%M") %>
      <br><br><br></div></a>
      <br>
    <% end%>
</div>
<% end %>
</body>
